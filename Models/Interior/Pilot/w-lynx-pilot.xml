    <object-name>Helmet-Main</object-name>
    <object-name>Helmet-Plate-IN</object-name>
    <object-name>Helmet-Plate-OUT</object-name>
    <object-name>Helmet-Radio-Device.000</object-name>
    <object-name>Helmet-Radio-Device.001</object-name>
    <object-name>Helmet-SottoGola</object-name>
    <object-name>Jacket.000</object-name>
    <object-name>Jacket.001</object-name>
    <object-name>Jacket.002</object-name>
    <object-name>Jacket.003</object-name>
    <object-name>Mano-Dx</object-name>
    <object-name>Mano-Sx</object-name>
    <object-name>Patch.000</object-name>
    <object-name>Patch.001</object-name>
